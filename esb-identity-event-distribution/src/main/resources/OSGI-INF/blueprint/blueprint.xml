<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
	
	<reference id="txManager" interface="org.springframework.transaction.PlatformTransactionManager" />
	<reference id="jmsTxManager" interface="org.springframework.jms.connection.JmsTransactionManager" />

	<bean id="required" class="org.apache.camel.spring.spi.SpringTransactionPolicy">
  		<property name="transactionManager" ref="jmsTxManager"/>
  		<property name="propagationBehaviorName" value="PROPAGATION_REQUIRED"/>
	</bean>

	<camelContext xmlns="http://camel.apache.org/schema/blueprint">
		<!-- Distribute identity events to registered consumers -->
		<route id="IdentityDistributionRoute">
			<description>
				This is the distribution route for messages in the identity event domain.
			</description>

			<!-- Listen for events on distribution channel. -->
			<from id="Event distribution consumer" uri="activemq:queue:identity-event-distribution" />

			<transacted ref="required"/>

			<multicast stopOnException="true">
				<to id="Event distribution for SP" uri="activemq:queue:identity-event-distribution-sp" />
			</multicast>
		</route>
	</camelContext>

</blueprint>
